				</control>
                <control type="image" id="3008">
					<description>thumb</description>
					<left>10</left>
					<top>15</top>
					<width>240</width>
					<height>200</height>
					<aspectratio align="left" aligny="top" scalediffuse="false">keep</aspectratio>
				</control>
				<control type="image" id="3006">
					<description>clearart</description>
					<right>10</right>
					<top>40</top>
					<width>275</width>
					<height>145</height>
